{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "rootDir": "src",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "noUnusedParameters": true
  },
  "exclude": ["node_modules", "tests", "scripts"]
}
